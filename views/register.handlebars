<div class="contentContainer">
  <div class="formContainer">
    <div class="postHeader"><span class="postTitle">Register</span></div>
    <div class="formBody">
      <form id="signup-form">
        <p><input
            type="text"
            name="username"
            placeholder="username"
            class="input-field"
          /></p>
        <p><input
            type="text"
            name="password"
            placeholder="password"
            class="input-field"
          /></p>
        <button
          class="button"
          type="button"
          id="signup-form-submit"
        >Register</button>
      </form>
      <div class="hidden">Incorrect login. Please try again.</div>
    </div>
  </div>
</div>

<script src="/js/register.js"></script>