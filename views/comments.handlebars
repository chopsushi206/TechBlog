<div class="postContainer">
  <div class="post">
    <div class="postHeader">
      <span class="postTitle">{{post.title}}</span>
      <span class="postInfo">Posted by
        {{post.user.dataValues.username}}
        on 12/12/12.</span>
    </div>
    <div class="postBody">
      {{post.blog}}
    </div>
  </div>
</div>
<div class="commentContainer">
  <div class="postHeader"><span class="postTitle">Comments</span></div>
  {{#each comments as |comment|}}
    <div class="comment">{{comment.comment}}</div>
    <div class="commentUser">--posted by
      {{comment.user.username}}</div>
  {{/each}}
</div>

<div class="contentContainer">
  <div class="formContainer">
    <div class="postHeader"><span class="postTitle">New Comment</span></div>
    <div class="formBody">
      <form id="newComment">
        <p><input
            type="text"
            name="comment"
            placeholder="Add Your Comment"
            class="commentInput"
          /></p>
        <button class="button" type="button" id="submitComment">Post</button>
      </form>
    </div>
  </div>
</div>

<script src="/js/comment.js"></script>